@model IEnumerable<GetAllOrderDTO>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Order Number
            </th>
            <th>
                Order Date
            </th>
            <th>
                Client Name
            </th>
            <th>
                Status_En
            </th>
            <th>
               Status_Ar
            </th>
            <th>
               Payment Type
            </th>
            <th>
               Total Amount
            </th>
            <th></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                  @(item.OrderNumber)
            </td>
            <td>
               @(item.CreatedAt)
            </td>
            <td>
                @(item.User.FirstName + " " + item.User.LastName)
            </td>
            <td>
                @(item.Status_En)
            </td>
            <td>
                @(item.Status_Er)
            </td>
            <td>
                 @(item.Payment.PaymentType)
            </td>
            <td>
                @(item.TotalAmount)
            </td>
                <td></td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" asp-route-orderState="@item.Status_En">
                    <i class="bi bi-pencil-square">
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-pencil-square text-success" viewBox="0 0 20 20">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                        </svg>
                    </i>
                </a>
                 <td>
                    <a class="card-link" asp-controller="Order" asp-action="Details" asp-route-id="@item.Id">
                        <i class="bi bi-info-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-info-lg" viewBox="0 0 16 16">
                                <path d="m9.708 6.075-3.024.379-.108.502.595.108c.387.093.464.232.38.619l-.975 4.577c-.255 1.183.14 1.74 1.067 1.74.72 0 1.554-.332 1.933-.789l.116-.549c-.263.232-.65.325-.905.325-.363 0-.494-.255-.402-.704zm.091-2.755a1.32 1.32 0 1 1-2.64 0 1.32 1.32 0 0 1 2.64 0" />
                            </svg>
                        </i>
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>

